@model Produto // referenciado no arquivo _ViewImports

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid"></p>
    <h3>Pre√ßo : @Model.Preco.ToString("c")</h3>
    <h4>@Model.Nome</h4>
    <a asp-controller="Produto" asp-action="Details" asp-route-ProdutoId="@Model.ProdutoId">@Model.Nome</a>

    <p>@Model.DescricaoCurta</p>

    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                asp-action="AdicionarItemNoCarrinhoCompra" asp-route-LancheId="@Model.ProdutoId">
                Incluir no Carrinho
            </a>
        </p>
    </div>

</div>